#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/buildcore.mk
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/rules/simple-patchsys.mk
include /usr/share/cdbs/1/class/autotools.mk

DEB_CONFIGURE_EXTRA_FLAGS := --with-ssh=/usr/bin/ssh 

install/autossh::
	cp $(CURDIR)/autossh $(CURDIR)/debian/autossh/usr/lib/autossh/autossh
	chown root.root $(CURDIR)/debian/autossh/usr/lib/autossh/autossh

	install -m0755 $(CURDIR)/debian/autossh_wrapper \
		$(CURDIR)/debian/autossh/usr/bin/autossh

	rm -rf $(CURDIR)/debian/autossh/usr/share/examples/
	rm -rf $(CURDIR)/debian/autossh/usr/share/doc/autossh/CHANGES

